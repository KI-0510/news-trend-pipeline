{
  "dry_run": true,
  "use_pro": false,
  "queries": [
    "디스플레이",
    "OLED",
    "AI"
  ],
  "per_query_display": 10,
  "pages": 1,
  "top_n_keywords": 30,

  "min_docfreq": 6,
  "min_docfreq_autotune": true,

  "stopwords": [
    "위한", "대한", "이번", "시대", "제공", "개최", "지역", "기자", "사진", "영상", "속보",
    "단독", "종합", "네이버", "뉴스", "연합뉴스", "국가", "정부", "대통령", "위원회", "있다",
    "최근에는", "직접", "운영", "강화", "출범", "이어", "기반", "활용", "국제", "프로그램", "국내"
  ],

  "phrase_stop": [
    "것으로 보인다", "것으로 예상된다", "것으로 전망된다", "이어가고 있다", "업계에 따르면",
    "서울 뉴시스", "있다 특히", "지난 일부터", "개선될 것으로", "환경을 제공한다",
    "최고 수준의", "한국거래소에 따르면", "제공할 예정이다", "이라고 말", "재배포 금지",
    "순조롭게 진행되고", "달성을 목표로", "거점으로 자리매김할", "경쟁력을 갖출",
    "이를 통", "오후 기준", "이번 협약", "적극 지원하겠다", "지원하겠다 밝혔다"
  ],

  "common_debuff": [
    "시장", "글로벌", "생활", "기술", "최근", "지난해", "세계", "사업", "플랫폼",
    "전자", "제품", "개발", "제조", "투자", "제작", "차세대",
    "지원", "사용", "분야", "첨단", "가능", "오는", "오른", "상승", "성장", "개선",
    "마련", "기능", "기여", "프로젝트", "조성", "안전", "보안", "거래일"
  ],

  "domain_hints": [
    "디스플레이 제조", "공정 자동화", "AR/VR", "OLED", "MicroLED", "LTPO", "QD", "수율",
    "폴더블", "롤러블", "스트레처블", "자동차용 디스플레이", "게이밍", "비전프로", "FMM"
  ],

  "alias": {
    "디스플레": "디스플레이",
    "oled": "OLED",
    "올레드": "OLED",
    "유기발광다이오드": "OLED",
    "microled": "MicroLED",
    "마이크로led": "MicroLED",
    "loT": "IoT",
    "올레도스": "OLEDos",
    "레도스": "LEDos"
  },

  "weights": {
    "entity_boost": 1.35,
    "brand_boost": 1.2,
    "common_debuff": 0.55,
    "person_name_debuff": 0.8,
    "location_debuff": 0.6,
    "number_debuff": 0.5,
    "domain_hint_boost": 1.4,

    "bigram_top30_boost": 1.35,
    "trigram_top_boost": 1.25,
    "entity_exact_boost": 1.5,

    "mmr_diversity": 0.5,
    "title_boost": 1.6,
    "lead_boost": 1.3,
    "firstpara_boost": 1.2
  },

  "keybert_model": "sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2",
  "max_docs_rerank": 80,

  "umap_neighbors": 15,
  "min_cluster_size": 12,

  "keyword_extraction_defaults": {
    "FIX_MAP": {
      "디스플레": "디스플레이",
      "oled": "OLED",
      "loT": "IoT"
    },
    "MORE_STOP": [
      "이날", "이라고", "이라며", "대비", "가장", "특히", "지난", "따르면", "모든",
      "적극", "디스", "프로", "미래", "혁신", "전문", "모델을", "성과를", "받았다",
      "밝혔다", "강조했다", "있는", "새로운", "여러"
    ],
    "EN_STOP": [
      "the", "and", "to", "of", "in", "for", "on", "with", "at", "by", "from",
      "as", "is", "are", "be", "it", "that", "this", "an", "a", "or", "if",
      "we", "you", "they", "he", "she", "was", "were", "been", "than", "into",
      "about", "over", "under", "per", "via"
    ]
  },

  "regex_patterns": {
    "CURRENCY_PAT": "^[0-9,\\.]+(원|달러|유로|엔|위안|억원|조원)$",
    "DATE_PAT": "^\\d{1,2}일$|^\\d{1,2}월$|^\\d{4}년$|^\\d{4}$",
    "NUMERIC_ONLY": "^\\d+$",
    "BROKEN_KO": "^[ㄱ-ㅎㅏ-ㅣ]+$",
    "PERSON_NAME_PAT": "^[가-힣]{2,4}$",
    "TAIL_BAD_RE": "(하기\\s?위|위해|위한|하며|하고|하는|으로|로|에|에서|부터|까지)$",
    "BAD_ENDING_PAT": "(을|를)\\s*활용한$|(하|되)겠다$|(했|혔)다$|(이|라)며$|(하|되)는\\s*(핵심|기술|방안)$|(을|를)\\s*통(해)?$|(다|고|라)는$"
  },

  "news_byline_patterns": [
    "(?:[가-힣]{2,4})\\s?기자",
    "기자\\s?[가-힣]{2,4}",
    "사진제공|무단전재|재배포|제공한|제공했다"
  ],

  "llm": {
    "provider": "gemini",
    "model": "gemini-1.5-flash",
    "max_output_tokens": 2048,
    "temperature": 0.3
  },

  "timezone": "Asia/Seoul"
}
